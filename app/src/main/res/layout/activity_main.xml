<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="com.mdpgrp10.androidmobilecontrollermodule.MainActivity"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/surface"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/buttonF1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonRight"
            android:background="@drawable/ic_right"
            android:layout_alignTop="@+id/imageButtonLeft"
            android:layout_toRightOf="@+id/imageButtonDown"
            android:layout_toEndOf="@+id/imageButtonDown" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonLeft"
            android:background="@drawable/ic_left"
            android:layout_above="@+id/imageButtonDown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonDown"
            android:background="@drawable/ic_down"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageButtonLeft"
            android:layout_toEndOf="@+id/imageButtonLeft" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonUp"
            android:background="@drawable/ic_up"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButtonLeft"
            android:layout_toEndOf="@+id/imageButtonLeft" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F1"
        android:id="@+id/buttonF1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F2"
        android:id="@+id/buttonF2"
        android:layout_alignTop="@+id/buttonF1"
        android:layout_toRightOf="@+id/buttonF1"
        android:layout_toEndOf="@+id/buttonF1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:id="@+id/buttonExplore"
        android:layout_below="@+id/relativeLayout"
        android:layout_toRightOf="@+id/buttonF2"
        android:layout_toEndOf="@+id/buttonF2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Robot Status:"
        android:id="@+id/textViewRobotStatus"
        android:layout_below="@+id/toggleButton"
        android:layout_alignLeft="@+id/robotStatus"
        android:layout_alignStart="@+id/robotStatus" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignLeft="@+id/textViewRobotStatus"
        android:layout_alignStart="@+id/textViewRobotStatus"
        android:checked="false" />

    <EditText
        android:id="@+id/robotStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/textViewRobotStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_above="@+id/buttonF2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shorest Path"
        android:id="@+id/buttonShortestPath"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonExplore"
        android:layout_toEndOf="@+id/buttonExplore" />

</RelativeLayout>
