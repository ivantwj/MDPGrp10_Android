<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mdpgrp10.androidmobilecontrollermodule.SetFunctionActivity">

    <TextView
        android:id="@+id/textViewF1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Function 1"
        android:layout_alignRight="@+id/textViewF2"
        android:layout_alignEnd="@+id/textViewF2" />

    <EditText
        android:id="@+id/editTextF1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewF1"
        android:layout_toEndOf="@+id/textViewF1" />

    <TextView
        android:id="@+id/textViewF2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textViewF1"
        android:layout_marginTop="10dp"
        android:text="Function 2"/>

    <EditText
        android:id="@+id/editTextF2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textViewF2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editTextF1"
        android:layout_alignStart="@+id/editTextF1" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="Save Settings"
        android:layout_below="@+id/editTextF2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
